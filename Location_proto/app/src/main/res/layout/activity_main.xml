<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:background="#f5f5f5"
    android:layout_height="match_parent">

    <!-- The main content view -->
    <LinearLayout
        android:id="@+id/mainContent"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="#f5f5f5"
        android:layout_height="match_parent" >
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent" >
            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:elevation="20sp"
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:textColor="@android:color/darker_gray"
                android:layout_height="?attr/actionBarSize"
                android:background="?attr/colorPrimary"
                android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Dark"
                >
                <TextView
                    android:id="@+id/toolbar_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="28sp"
                    android:textColor="#6e6e6e"
                    android:layout_gravity="center"
                    />

            </android.support.v7.widget.Toolbar>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#f5f5f5"
                android:id="@+id/fm"
                >
            </FrameLayout>
        </LinearLayout>

    </LinearLayout>
    <!-- The navigation drawer -->
    <LinearLayout
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:id="@+id/drawerPane"
        android:orientation="vertical"
        android:background="#f5f5f5"
        android:layout_gravity="start">
        <View
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:background="#f5f5f5"/>
        <!-- Profile Box -->
        <RelativeLayout
            android:id="@+id/profileBox"
            android:layout_width="match_parent"
            android:layout_weight="2.3"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="#cf2196f3"
            android:padding="4dp">
<LinearLayout
    android:layout_marginTop="20dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="90sp"
        android:layout_height="90sp"
        android:layout_gravity="center"
       >
        <View
            android:layout_width="90dp"
            android:background="@drawable/ring"
            android:layout_centerInParent="true"
            android:layout_height="90dp"
            >
        </View>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <try_run.gagan.shah.location_proto.CircleView
                android:layout_width="80sp"
                android:layout_height="80sp"
                android:layout_centerInParent="true"
                android:src="@drawable/backcon"
                android:id="@+id/circleViewm" />
            <TextView
                android:layout_width="80sp"
                android:layout_height="80sp"
                android:text="A"
                android:gravity="center"
                android:id="@+id/mainpictxt"
                android:layout_centerInParent="true"
                android:textSize="50dp"
                android:textColor="#f5f5f5"
                />
        </RelativeLayout>


    </RelativeLayout>

    <TextView
        android:layout_marginTop="5sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/name"
        android:textColor="#f5f5f5"
        android:gravity="center"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />
    <TextView
        android:layout_marginTop="5sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/mobile"
        android:textColor="#f5f5f5"
        android:gravity="center"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

</LinearLayout>
        </RelativeLayout>
        <!-- List of Actions (pages) -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#f5f5f5"
            android:orientation="vertical"
            android:layout_weight="1">
            <android.support.v7.widget.CardView
                android:id="@+id/card_view5"
                android:layout_gravity="center"
                android:elevation="5dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                card_view:cardCornerRadius="10dp">
                <ExpandableListView
                    android:id="@+id/lvExp"
                    android:layout_below="@+id/profileBox"
                    android:layout_height="wrap_content"
                    android:layout_width="280dp"
                    android:childDivider="#6e6e6e"
                    android:background="#dedcdc"
                    android:dividerHeight="0.25dp"
                    android:divider="#dedcdc"/>
            </android.support.v7.widget.CardView>



        </FrameLayout>

    </LinearLayout>

</android.support.v4.widget.DrawerLayout>